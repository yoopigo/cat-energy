{
  "name": "Cat-energy",
  "private": true,
  "homepage": "https://yoopigo.github.io/cat-energy",
  "description": "Личный проект «Cat-energy» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.2.5",
    "browser-sync": "^2.27.10",
    "del": "^6.0.0",
    "gh-pages": "^4.0.0",
    "gulp": "4.0.2",
    "gulp-csso": "^4.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-less": "4.0.1",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^4.0.1",
    "postcss": "^8.4.16",
    "stylelint": "13.12.0",
    "stylelint-config-htmlacademy": "0.1.4"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "npm run build",
    "start": "gulp",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
